{
  "compileOnSave": true,
  "compilerOptions": {
      "target": "es5",
      "module": "ES2015",
      "outDir": "dist",
      "allowJs": true,
      "checkJs": false,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop" : true,
      "watch": true
  },
  "script": {
    "dev": "tsc -w"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}